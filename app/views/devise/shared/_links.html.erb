<div class="mt-3">
  <% if controller_name != 'sessions' %>
    <div class="mb-2">
      <%= link_to t("devise.shared.links.login"), new_session_path(resource_name), class: "text-primary" %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="mb-2">
      <%= link_to t("devise.shared.links.signup"), new_registration_path(resource_name), class: "text-primary" %>
    </div>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'password_resets' && controller_name != 'registrations' %>
    <div class="mb-2">
      <%= link_to t("devise.shared.links.forgot_password"), new_password_path(resource_name), class: "text-primary" %>
    </div>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="mb-2">
      <%= link_to t("devise.shared.links.resend_confirmation"), new_confirmation_path(resource_name), class: "text-primary" %>
    </div>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="mb-2">
      <%= link_to t("devise.shared.links.resend_unlock"), new_unlock_path(resource_name), class: "text-primary" %>
    </div>
  <% end %>
</div>
