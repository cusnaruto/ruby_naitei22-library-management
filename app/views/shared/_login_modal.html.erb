<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel"><%= t("login_modal.title") %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="<%= t("login_modal.close") %>"></button>
      </div>
      <div class="modal-body">
        <%= t("login_modal.message") %>
      </div>
      <div class="modal-footer">
        <%= link_to t("login_modal.login_button"), new_user_session_path, class: "btn btn-primary" %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t("login_modal.cancel_button") %></button>
      </div>
    </div>
  </div>
</div>
